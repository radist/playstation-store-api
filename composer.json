{
  "name": "mrt1m/playstation-store-api",
  "description": "A simple wrapper for working with PlayStation Store API",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "api-client",
    "playstation",
    "playstation-store",
    "php8"
  ],
  "authors": [
    {
      "name": "mrt1m",
      "email": "mrt1m@ya.ru"
    }
  ],
  "support": {
      "issues": "https://github.com/mrt1m/playstation-store-api/issues",
      "source": "https://github.com/mrt1m/playstation-store-api"
  },
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "symfony/serializer": "^6.0",
    "symfony/property-access": "^6.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "symfony/property-info": "^7.3",
    "phpdocumentor/reflection-docblock": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.0",
    "psalm/phar": "^5.0",
    "guzzlehttp/guzzle": "^7.0",
    "nyholm/psr7": "^1.8"
  },
  "suggest": {
      "guzzlehttp/guzzle": "Для отправки HTTP-запросов (реализация PSR-18).",
      "nyholm/psr7": "Для легковесной реализации PSR-7 и PSR-17."
  },
  "autoload": {
    "psr-4": {
      "PlaystationStoreApi\\": "src/"
    }
  },
  "autoload-dev": {
        "psr-4": {
            "PlaystationStoreApi\\Test\\": [
                "tests"
            ]
        }
    },
  "scripts": {
    "codestyle": "php-cs-fixer fix",
    "coverage": "phpunit --coverage-html=\".phpunit.cache/code-coverage\"",
    "psalm": "vendor/bin/psalm.phar -c psalm.xml --show-info=true",
    "phpstan": "phpstan analyze --memory-limit 512M --configuration phpstan.neon.dist",
    "phpunit": "phpunit",
    "test": [
      "@psalm",
      "@phpstan",
      "@phpunit",
      "@codestyle --dry-run --diff"
    ]
  }
}
